{% extends 'base.html.twig' %}

{% block title %}Subject index{% endblock %}

{% block body %}
    <h1>Subject index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.id }}</td>
                <td>{{ subject.Title }}</td>
                <td>{{ subject.Description }}</td>
                <td>
                    <a href="{{ path('app_subject_show', {'id': subject.id}) }}">show</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h1>My Subjects</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for subject in mySubjects %}
            <tr>
                <td>{{ subject.id }}</td>
                <td>{{ subject.Title }}</td>
                <td>{{ subject.Description }}</td>
                <td>
                    <a href="{{ path('app_subject_show', {'id': subject.id}) }}">show</a>
                    <a href="{{ path('app_subject_edit', {'id': subject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_subject_new') }}">Create new</a>
{% endblock %}
