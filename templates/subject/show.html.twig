{% extends 'base.html.twig' %}

{% block title %}Subject{% endblock %}

{% block body %}
    <h1>Subject</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subject.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ subject.Title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ subject.Description }}</td>
            </tr>
            <tr>
                <th>Description</th>
                {% for messages in message %}
                    <tr>
                        <td>{{ messages.id }}</td>
                        <td>{{ messages.content }}</td>
                        <td>{{ messages.author.name }}</td>
                    </tr>
                {% endfor %}
            </tr>
        </tbody>

    </table>

    <a href="{{ path('app_subject_index') }}">back to list</a>

    <a href="{{ path('app_subject_edit', {'id': subject.id}) }}">edit</a>

    {{ include('subject/_delete_form.html.twig') }}
{% endblock %}
